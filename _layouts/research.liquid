---
layout: page
---
<div class="post">
  <article>
    {% for topic in site.data.research %}
      <hr>
      <h4><b>{{ topic.title }}</b></h4>
      <div class="profile float-{% if topic.align == 'left' %}left{% else %}right{% endif %}">
        {% if topic.image %}
          {% assign topic_image_path = topic.image | prepend: 'assets/img/' %}
          {% if topic.image_circular %}
            {% assign topic_image_class = 'img-fluid z-depth-1 rounded-circle' %}
          {% else %}
            {% assign topic_image_class = 'img-fluid z-depth-1 rounded' %}
          {% endif %}
          {% capture sizes %}(min-width: {{ site.max_width }}) {{ site.max_width | minus: 30 | times: 0.3}}px, (min-width: 576px) 30vw, 95vw"{% endcapture %}
          {% include figure.liquid loading="eager" path=topic_image_path class=topic_image_class sizes=sizes alt=topic.image %}
        {% endif %}
        {% if topic.highlights %}
          <h5 style="margin-bottom: -2px;"><b><em>{{ site.data[site.active_lang].strings.research.highlights }}</em></b></h5>
          {% for paper in topic.highlights %}
            <div class="paper-container">
              <a class="paper-link" target="_blank" href="https://doi.org/{{ paper.doi }}">{{ paper.name }}, {{ paper.year }}</a>
              <div class="altmetric-badge-container">
                <div data-link-target="_blank" data-badge-popover="right" data-no-score='true' data-badge-type="donut" data-doi="{{ paper.doi }}" data-hide-no-mentions="true" class="altmetric-embed"></div>
              </div>
            </div>
          {% endfor %}
        {% endif %}
      </div>

      <div class="clearfix" style="margin-top: 2px;">
        {% if topic.content %}
          {{ topic.content | markdownify }}
        {% else %}
          {{ content }}
        {% endif %}
      </div>
    {% endfor %}
  </article>
</div>
